---
interface Props {
	date: Date;
	class?: string;
}

const { date, class: className = "" } = Astro.props;
---

<time datetime={date.toISOString()}
	 class={`text-gray-500 dark:text-gray-400 text-xs font-medium tracking-wide ${className}`}
>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
