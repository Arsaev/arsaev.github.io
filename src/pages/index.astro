---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import RecentPublications from "../components/RecentPublications.astro";
import { getCollection } from 'astro:content';
import ArtGallery from '../components/ArtGallery.astro';
const artItems = await getCollection('art');

function slugify(str) {
  return str ? str.toLowerCase().replace(/\s+/g, '-') : '';
}
const selectedMedium = 'All';
const mediums = Array.from(new Set(artItems.map(a => a.data.medium).filter(Boolean)));
mediums.unshift('All');

artItems.sort((a, b) => {
  if (a.data.year !== b.data.year) return b.data.year - a.data.year;
  return b.data.month - a.data.month;
});

// short by 20 most recent
artItems.splice(20);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300" >
    <Header />
    <main class="flex flex-col justify-center">
      <div class="px-4 md:px-16 flex flex-col gap-4 md:my-10">
        <h1 class="text-2xl md:text-5xl w-full">ðŸŽ¨ Hi, Iâ€™m Mago </h1>
        <p class="w-full text-justify text-base md:text-lg">
          a self-taught software developer and artist.
          I develop software, create art, and explore ideas that blend both worlds. This site is where I share what Iâ€™m making and where Iâ€™m heading 
        </p>
      </div>
      <div class="w-full flex flex-col items-center gap-2.5 px-4 lg:px-0 mt-6">
        <img
          src="/vague.jpg"
          alt="Vague - a watercolor expressionistic self-portrait of Mago"
        />
      </div>
      <div class="px-4 md:px-0 mt-10">
      <section class="mb-8">
        <h2 class="text-3xl font-bold mb-4">Most recent art</h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {mediums.map(m => (
            <li>
              <a href={slugify(m) === 'all' ? '/art' : `/art/${slugify(m)}`}
                class={`block p-3 rounded bg-gray-100 dark:bg-neutral-700 hover:bg-gray-200 dark:hover:bg-neutral-600 transition${selectedMedium === m ? ' ring-2 ring-blue-500' : ''}`}>
                {m}
              </a>
            </li>
          ))}
        </ul>
      </section>
      <ArtGallery artItems={artItems} />
    </div>
    <RecentPublications />
        </main>
    <Footer />
  </body>
</html>

